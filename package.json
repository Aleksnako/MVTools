{
  "name": "mv-tools",
  "version": "3.0.1",
  "displayName": "MVTools",
  "author": "josemariafs",
  "description": "Additional tools for www.mediavida.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aleksnako/MVTools"
  },
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:firefox": "BROWSER=firefox vite build",
    "watch": "vite build --mode development --minify false --watch",
    "watch:firefox": "BROWSER=firefox vite build --mode development --minify false --watch",
    "dev": "vite",
    "serve": "web-ext run -t chromium --start-url \"https://www.mediavida.com\" --source-dir ./dist/ --chromium-profile=./chromium-profile/ --profile-create-if-missing --keep-profile-changes",
    "serve:firefox": "web-ext run --start-url \"https://www.mediavida.com\"  --source-dir ./dist/ --firefox-profile=./firefox-profile/ --profile-create-if-missing --keep-profile-changes",
    "prettier": "prettier --check  \"**/*.{js,cjs,mts,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write  \"**/*.{js,cjs,mts,jsx,ts,tsx}\"",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "lint": "pnpm prettier && pnpm eslint",
    "lint:fix": "pnpm prettier:fix && pnpm eslint:fix",
    "ts:check": "tsc --noEmit",
    "knip": "knip --exclude binaries",
    "knip:deps": "knip --include dependencies --exclude binaries",
    "knip:fix": "knip --exclude binaries --fix"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "@radix-ui/react-alert-dialog": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.2.2",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.3",
    "@suspensive/react": "^2.18.12",
    "@tanstack/react-form": "^1.6.3",
    "@tanstack/react-query": "^5.74.4",
    "@tanstack/react-query-devtools": "^5.74.4",
    "@tanstack/react-store": "^0.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.501.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "semver": "^7.7.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "turndown": "^7.2.0",
    "webextension-polyfill": "^0.12.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@samrum/vite-plugin-web-extension": "^5.1.1",
    "@tanstack/eslint-plugin-query": "^5.73.3",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/chrome": "0.0.254",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/semver": "^7.7.0",
    "@types/turndown": "^5.0.5",
    "@types/webextension-polyfill": "0.12.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-config-love": "^119.0.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "knip": "^5.50.5",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "3.4.17",
    "typescript": "^5.8.3",
    "vite": "^5.4.18",
    "vite-plugin-zip-pack": "^1.2.4",
    "web-ext": "^8.5.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@radix-ui/react-alert-dialog": "patches/@radix-ui__react-alert-dialog.patch",
      "@radix-ui/react-dialog": "patches/@radix-ui__react-dialog.patch"
    }
  }
}
